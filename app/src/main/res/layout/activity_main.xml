<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fd_white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ch.zz.faceiddemo.MainActivity">

    <TextView
        android:id="@+id/fd_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录状态：未登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fd_login_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录" />

        <Button
            android:id="@+id/fd_login_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册" />

        <Button
            android:id="@+id/fd_login_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸绑定" />

        <Button
            android:id="@+id/fd_rigit_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸登陆" />

    </LinearLayout>

</LinearLayout>
