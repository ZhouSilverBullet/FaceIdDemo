<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fd_white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ch.zz.faceiddemo.LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="登录"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textSize="@dimen/fd_text_normal_size"
            android:visibility="gone" />

        <com.ch.zz.faceiddemo.wight.TintEditText
            android:id="@+id/fd_login_account_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_username_default"
            android:drawablePadding="10dp"
            android:hint="@string/fd_login_edit_account_hint"
            android:singleLine="true"
            android:textSize="@dimen/fd_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密\t\t码："
            android:textSize="@dimen/fd_text_normal_size"
            android:visibility="gone" />

        <com.ch.zz.faceiddemo.wight.TintEditText
            android:id="@+id/fd_login_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_password_default"
            android:drawablePadding="10dp"
            android:hint="@string/fd_login_edit_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/fd_text_normal_size" />
    </LinearLayout>

    <Button
        android:id="@+id/fb_login_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录" />
</LinearLayout>
